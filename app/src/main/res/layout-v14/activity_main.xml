<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bchollywood.modernartui.MainActivity" >

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/bottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignRight="@+id/topLeft"
        android:layout_below="@+id/topLeft"
        android:background="#31B404" />

    <View
        android:id="@+id/bottomRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignTop="@+id/bottomLeft"
        android:layout_toRightOf="@+id/bottomLeft"
        android:background="#2E2EFE" />

    <View
        android:id="@+id/topLeft"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="29dp"
        android:background="#F3F781" />

    <View
        android:id="@+id/topRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#FF0080"
        android:layout_alignTop="@+id/topLeft"
        android:layout_toRightOf="@+id/topLeft"
        android:layout_alignBottom="@+id/topLeft"
        android:layout_alignRight="@+id/bottomRight"
        android:layout_alignEnd="@+id/bottomRight" />

    <View
        android:id="@+id/white_rectangle"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="108dp"
        android:background="@android:color/white"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:layout_alignTop="@+id/topLeft"
        android:layout_alignLeft="@+id/bottomLeft"
        android:layout_alignStart="@+id/bottomLeft" />

</RelativeLayout>